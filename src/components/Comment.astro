---
type Props =  {
    location?: string;
    role: string;
    lastName: string;
    firstName: string;
    image?: string;
    comment?: string;
};

const { location, role, lastName, firstName, image, comment } = Astro.props;
---

<div class="mt-8 grid grid-cols-1 sm:grid-cols-4 gap-4 mx-auto">
    <div class="my-auto">
        {
            image !== undefined && <img src={`/img/comments/${image}`} class="mx-auto max-w-32 mb-6">
        }
        <div class="text-center text-3xl [&_span]:inline-block [&_span]:whitespace-nowrap">
            <p class="font-bold">
                <span>{location}</span>
                <span>{role}</span>
            </p>
            <p>
                <span>{lastName}</span>
                <span>{firstName}</span>
            </p>
        </div>
    </div>
    <div class="sm:col-span-3">
        {
            comment !== undefined && comment.split(/\\n/).map((line:string) => {
                return <div class="text-xl mt-4">{line}</div>
            })
        }
    </div>
</div>
